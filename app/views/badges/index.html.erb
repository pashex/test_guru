    <div class="col-3">
      <%= Badge.human_attribute_name(:name) %>
    </div>
    <div class="col-4">
      <%= Badge.human_attribute_name(:rule_id) %>
    </div>
    <div class="col-1">
      <%= t(".badge_count") %>
