<div class="row text-center">
  <div class="col">
    <h1><%= t(".title") %></h1>
  </div>
</div>

<div class="table">
  <div class="row font-weight-bold text-center align-items-center">
    <div class="col-2">
      <%= Badge.human_attribute_name(:image) %>
